    <script>
        const hebrewAlphabet = [
            { num: 1, letter: '×', sound: 'alef', audioData: null },
            { num: 2, letter: '×‘', sound: 'bet', audioData: null },
            { num: 3, letter: '×’', sound: 'gimel', audioData: null },
            { num: 4, letter: '×“', sound: 'dalet', audioData: null },
            { num: 5, letter: '×”', sound: 'he', audioData: null },
            { num: 6, letter: '×•', sound: 'vav', audioData: null },
            { num: 7, letter: '×–', sound: 'zayin', audioData: null },
            { num: 8, letter: '×—', sound: 'chet', audioData: null },
            { num: 9, letter: '×˜', sound: 'tet', audioData: null },
            { num: 10, letter: '×™', sound: 'yod', audioData: null },
            { num: 11, letter: '×›', sound: 'kaf', audioData: null },
            { num: 12, letter: '×œ', sound: 'lamed', audioData: null },
            { num: 13, letter: '×', sound: 'mem', audioData: null },
            { num: 14, letter: '× ', sound: 'nun', audioData: null },
            { num: 15, letter: '×¡', sound: 'samech', audioData: null },
            { num: 16, letter: '×¢', sound: 'ayin', audioData: null },
            { num: 17, letter: '×¤', sound: 'pe', audioData: null },
            { num: 18, letter: '×¦', sound: 'tsadi', audioData: null },
            { num: 19, letter: '×§', sound: 'kof', audioData: null },
            { num: 20, letter: '×¨', sound: 'resh', audioData: null },
            { num: 21, letter: '×©', sound: 'shin', audioData: null },
            { num: 22, letter: '×ª', sound: 'tav', audioData: null },
            { num: 23, letter: '×š', sound: 'kaf sofit', audioData: null },
            { num: 24, letter: '×', sound: 'mem sofit', audioData: null },
            { num: 25, letter: '×Ÿ', sound: 'nun sofit', audioData: null },
            { num: 26, letter: '×£', sound: 'pe sofit', audioData: null },
            { num: 27, letter: '×¥', sound: 'tsadi sofit', audioData: null }
        ];

        const grid = document.getElementById('alphabetGrid');
        const infoText = document.getElementById('infoText');
        const logContainer = document.getElementById('logContainer');
        const toggleLogBtn = document.getElementById('toggleLogBtn');
        const downloadLogBtn = document.getElementById('downloadLogBtn');
        const refreshBtn = document.getElementById('refreshBtn');
        const practiceModeBtn = document.getElementById('practiceMode');
        const gameModeBtn = document.getElementById('gameMode');
        const gameSection = document.getElementById('gameSection');
        const wordLetters = document.getElementById('wordLetters');
        const scoreValue = document.getElementById('scoreValue');
        const newWordBtn = document.getElementById('newWordBtn');
        
        let logEntries = [];
        let currentMode = 'practice';
        let gameState = {
            currentWord: [],
            currentPosition: 0,
            score: 0,
            difficulty: 3
        };

        function addLog(message, type = 'info') {
            const timestamp = new Date().toLocaleTimeString('he-IL');
            const entry = `[${timestamp}] ${message}`;
            logEntries.push(entry);
            
            const logDiv = document.createElement('div');
            logDiv.className = `log-entry log-${type}`;
            logDiv.textContent = entry;
            logContainer.appendChild(logDiv);
            logContainer.scrollTop = logContainer.scrollHeight;
            
            console.log(entry);
        }

        // Mode switching
        practiceModeBtn.addEventListener('click', () => {
            currentMode = 'practice';
            practiceModeBtn.classList.add('active');
            gameModeBtn.classList.remove('active');
            gameSection.classList.remove('active');
            resetGameButtons();
        });

        gameModeBtn.addEventListener('click', () => {
            currentMode = 'game';
            gameModeBtn.classList.add('active');
            practiceModeBtn.classList.remove('active');
            gameSection.classList.add('active');
            generateNewWord();
        });

        // Difficulty selection
        document.querySelectorAll('.difficulty-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.difficulty-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                gameState.difficulty = parseInt(btn.dataset.length);
                generateNewWord();
            });
        });

        newWordBtn.addEventListener('click', generateNewWord);

        function generateNewWord() {
            gameState.currentWord = [];
            gameState.currentPosition = 0;
            
            // ×‘×—×¨ ××•×ª×™×•×ª ×¨× ×“×•××œ×™×•×ª
            const availableLetters = [...hebrewAlphabet];
            for (let i = 0; i < gameState.difficulty; i++) {
                const randomIndex = Math.floor(Math.random() * availableLetters.length);
                gameState.currentWord.push(availableLetters[randomIndex]);
                availableLetters.splice(randomIndex, 1);
            }
            
            displayWord();
            resetGameButtons();
            addLog(`ğŸ® ××™×œ×” ×—×“×©×” × ×•×¦×¨×”: ${gameState.currentWord.map(l => l.letter).join('')}`, 'info');
        }

        function displayWord() {
            wordLetters.innerHTML = '';
            gameState.currentWord.forEach((item, index) => {
                const letterBox = document.createElement('div');
                letterBox.className = 'word-letter';
                letterBox.textContent = '?';
                letterBox.dataset.index = index;
                wordLetters.appendChild(letterBox);
            });
        }

        function resetGameButtons() {
            document.querySelectorAll('.letter-btn').forEach(btn => {
                btn.classList.remove('game-correct', 'game-wrong');
            });
        }

        function playSuccessSound() {
            const audio = new Audio();
            const ctx = new AudioContext();
            const oscillator = ctx.createOscillator();
            const gainNode = ctx.createGain();
            
            oscillator.connect(gainNode);
            gainNode.connect(ctx.destination);
            
            oscillator.frequency.value = 523.25; // C5
            oscillator.type = 'sine';
            gainNode.gain.setValueAtTime(0.3, ctx.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, ctx.currentTime + 0.5);
            
            oscillator.start(ctx.currentTime);
            oscillator.stop(ctx.currentTime + 0.5);
            
            addLog('ğŸ‰ ×§×•×œ ×”×¦×œ×—×”!', 'success');
        }

        function playErrorSound() {
            const ctx = new AudioContext();
            const oscillator = ctx.createOscillator();
            const gainNode = ctx.createGain();
            
            oscillator.connect(gainNode);
            gainNode.connect(ctx.destination);
            
            oscillator.frequency.value = 200;
            oscillator.type = 'sawtooth';
            gainNode.gain.setValueAtTime(0.2, ctx.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.01, ctx.currentTime + 0.3);
            
            oscillator.start(ctx.currentTime);
            oscillator.stop(ctx.currentTime + 0.3);
        }

        toggleLogBtn.addEventListener('click', () => {
            logContainer.classList.toggle('visible');
        });

        downloadLogBtn.addEventListener('click', () => {
            const logText = logEntries.join('\n');
            const blob = new Blob([logText], { type: 'text/plain;charset=utf-8' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `hebrew-alphabet-log-${Date.now()}.txt`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            addLog('âœ… ×”×œ×•×’ ×”×•×¨×“ ×‘×”×¦×œ×—×”', 'success');
        });

        refreshBtn.addEventListener('click', async () => {
            addLog('ğŸ”„ ×¨×™×¢× ×•×Ÿ ×™×“× ×™ ××•×¤×¢×œ...', 'info');
            refreshBtn.disabled = true;
            refreshBtn.textContent = 'â³ ×˜×•×¢×Ÿ...';
            
            hebrewAlphabet.forEach(item => item.audioData = null);
            updateUI();
            
            await loadAudioFiles();
            
            refreshBtn.disabled = false;
            refreshBtn.textContent = 'ğŸ”„ ×˜×¢×Ÿ ××—×“×©';
            
            const loadedCount = hebrewAlphabet.filter(item => item.audioData).length;
            alert(`âœ“ ×”×•×©×œ×!\n${loadedCount}/27 ×§×‘×¦×™ ××•×“×™×• × ×˜×¢× ×•`);
        });

        async function loadAudioFiles() {
            addLog('ğŸµ ××ª×—×™×œ ×œ×˜×¢×•×Ÿ ×§×‘×¦×™ ××•×“×™×•...', 'info');
            addLog(`ğŸŒ URL ×‘×¡×™×¡: ${window.location.origin}${window.location.pathname}`, 'info');
            addLog(`â° ×–××Ÿ: ${new Date().toLocaleString('he-IL')}`, 'info');
            
            const loadPromises = hebrewAlphabet.map(async (item) => {
                const fileName = `${item.num}.mp3`;
                
                try {
                    addLog(`ğŸ” ×× ×¡×” ×œ×˜×¢×•×Ÿ: ${fileName}`, 'info');
                    
                    const response = await fetch(fileName, { 
                        cache: 'no-cache',
                        headers: {
                            'Cache-Control': 'no-cache'
                        }
                    });
                    
                    addLog(`ğŸ“¡ ${fileName}: ×¡×˜×˜×•×¡ ${response.status} ${response.statusText}`, response.ok ? 'info' : 'warning');
                    
                    if (response.ok) {
                        const blob = await response.blob();
                        addLog(`ğŸ“¦ ${fileName}: ×’×•×“×œ ${(blob.size / 1024).toFixed(1)} KB, ×˜×™×¤×•×¡ ${blob.type}`, 'info');
                        
                        if (blob.size > 0) {
                            const audioData = await new Promise((resolve) => {
                                const reader = new FileReader();
                                reader.onload = (e) => resolve(e.target.result);
                                reader.readAsDataURL(blob);
                            });
                            
                            item.audioData = audioData;
                            addLog(`âœ… ${fileName} × ×˜×¢×Ÿ ×‘×”×¦×œ×—×” ×¢×‘×•×¨ ××•×ª ${item.letter}`, 'success');
                        } else {
                            addLog(`âš ï¸ ${fileName} ×¨×™×§ (0 KB)`, 'warning');
                        }
                    } else {
                        addLog(`âš ï¸ ${fileName} ×œ× × ××¦× (404)`, 'warning');
                    }
                } catch (error) {
                    addLog(`âŒ ×©×’×™××” ×‘×˜×¢×™× ×ª ${fileName}: ${error.message}`, 'error');
                }
                
                if (!item.audioData) {
                    addLog(`âš ï¸ ××•×ª ${item.letter} (${item.num}) ×ª×©×ª××© ×‘-TTS`, 'warning');
                }
            });
            
            await Promise.all(loadPromises);
            
            updateUI();
            
            const loadedCount = hebrewAlphabet.filter(item => item.audioData).length;
            addLog(`ğŸ“Š ×¡×™×›×•×: ${loadedCount}/27 ×§×‘×¦×™ ××•×“×™×• × ×˜×¢× ×• ×‘×”×¦×œ×—×”`, loadedCount > 0 ? 'success' : 'error');
            
            if (loadedCount === 0) {
                addLog('âš ï¸ ××£ ×§×•×‘×¥ ×œ× × ×˜×¢×Ÿ! ××•×œ×™ GitHub Pages ×¢×“×™×™×Ÿ ××¢×“×›×Ÿ? ×—×›×” 2-3 ×“×§×•×ª ×•× ×¡×” ×©×•×‘', 'warning');
            }
        }

        function updateUI() {
            const buttons = document.querySelectorAll('.letter-btn');
            buttons.forEach((btn, index) => {
                if (hebrewAlphabet[index].audioData) {
                    btn.classList.add('has-audio');
                } else {
                    btn.classList.remove('has-audio');
                }
            });
            
            const audioCount = hebrewAlphabet.filter(item => item.audioData).length;
            infoText.textContent = `×œ×—×¥ ×¢×œ ××•×ª ×œ×©××•×¢ | ${audioCount}/27 ×§×‘×¦×™ ××•×“×™×• ×–××™× ×™× (×™×¨×•×§ = ××•×“×™×•, ××¤×•×¨ = TTS)`;
        }

        function speak(text) {
            addLog(`ğŸ—£ï¸ ××©×ª××© ×‘-TTS ×¢×‘×•×¨: ${text}`, 'info');
            const utterance = new SpeechSynthesisUtterance(text);
            utterance.lang = 'en-US';
            utterance.rate = 0.8;
            utterance.pitch = 1;
            speechSynthesis.speak(utterance);
        }

        function playSound(index) {
            const item = hebrewAlphabet[index];
            
            if (currentMode === 'game') {
                handleGameClick(index);
                return;
            }
            
            addLog(`ğŸ‘† ×œ×—×™×¦×” ×¢×œ ××•×ª ${item.letter} (${item.num})`, 'info');
            
            if (item.audioData) {
                addLog(`ğŸ”Š ×× ×’×Ÿ ××•×“×™×•...`, 'success');
                const audio = new Audio(item.audioData);
                
                audio.onended = () => {
                    addLog(`â¹ï¸ ×”×¡×ª×™×™×`, 'info');
                };
                
                audio.onerror = () => {
                    addLog(`âŒ ×©×’×™××ª × ×’×™× ×”, ×¢×•×‘×¨ ×œ-TTS`, 'error');
                    speak(item.sound);
                };
                
                audio.play().catch(() => {
                    addLog(`âŒ ×©×’×™××” ×‘×”×¤×¢×œ×”, ×¢×•×‘×¨ ×œ-TTS`, 'error');
                    speak(item.sound);
                });
            } else {
                speak(item.sound);
            }
        }

        function handleGameClick(index) {
            const clickedLetter = hebrewAlphabet[index];
            const expectedLetter = gameState.currentWord[gameState.currentPosition];
            const btn = document.querySelectorAll('.letter-btn')[index];
            
            addLog(`ğŸ® ×œ×—×™×¦×” ×‘××©×—×§: ${clickedLetter.letter}, ××¦×•×¤×”: ${expectedLetter.letter}`, 'info');
            
            if (clickedLetter.num === expectedLetter.num) {
                // × ×›×•×Ÿ!
                btn.classList.add('game-correct');
                const letterBox = document.querySelector(`.word-letter[data-index="${gameState.currentPosition}"]`);
                letterBox.textContent = clickedLetter.letter;
                letterBox.classList.add('correct');
                
                // × ×’×Ÿ ××ª ×”×¦×œ×™×œ ×©×œ ×”××•×ª
                if (clickedLetter.audioData) {
                    const audio = new Audio(clickedLetter.audioData);
                    audio.play();
                } else {
                    speak(clickedLetter.sound);
                }
                
                gameState.currentPosition++;
                
                // ×‘×“×•×§ ×× ×¡×™×™× ××ª ×”××™×œ×”
                if (gameState.currentPosition === gameState.currentWord.length) {
                    setTimeout(() => {
                        playSuccessSound();
                        gameState.score++;
                        scoreValue.textContent = gameState.score;
                        addLog(`ğŸ‰ ××™×œ×” ×”×•×©×œ××”! × ×™×§×•×“: ${gameState.score}`, 'success');
                        setTimeout(() => generateNewWord(), 1500);
                    }, 500);
                }
                
                setTimeout(() => btn.classList.remove('game-correct'), 300);
            } else {
                // ×œ× × ×›×•×Ÿ
                btn.classList.add('game-wrong');
                playErrorSound();
                addLog(`âŒ ××•×ª ×œ× × ×›×•× ×”!`, 'error');
                setTimeout(() => btn.classList.remove('game-wrong'), 500);
            }
        }

        // ×™×¦×™×¨×ª ×›×¤×ª×•×¨×™ ×”××•×ª×™×•×ª
        hebrewAlphabet.forEach((item, index) => {
            const btn = document.createElement('button');
            btn.className = 'letter-btn';
            
            const letterNumber = document.createElement('span');
            letterNumber.className = 'letter-number';
            letterNumber.textContent = item.num;
            
            const letterMain = document.createElement('span');
            letterMain.className = 'letter-main';
            letterMain.textContent = item.letter;
            
            btn.appendChild(letterNumber);
            btn.appendChild(letterMain);
            btn.addEventListener('click', () => playSound(index));
            
            grid.appendChild(btn);
        });

        // ×˜×¢×™× ×” ××•×˜×•××˜×™×ª
        addLog('ğŸš€ ××ª×—×•×œ ××¤×œ×™×§×¦×™×”...', 'success');
        loadAudioFiles();
    </script>
</body>
</html>
